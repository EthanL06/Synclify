    "@radix-ui/react-switch": "^1.1.0",
    "@radix-ui/react-tooltip": "^1.1.2",
    "@sentry/browser": "^8.28.0",
    "@sentry/cli": "^2.35.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "next-themes": "^0.3.0",
    "preact": "^10.23.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.53.0",
