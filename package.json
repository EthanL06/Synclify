    "webextension-polyfill": "^0.11.0"
  },
  "alias": {
    "react": "preact/compat",
    "react-dom": "preact/compat"
  },
  "manifest": {
    "host_permissions": [
      "$PLASMO_PUBLIC_SOCKET_ENDPOINT/*",
      "http://localhost:3000/*"
    ],
    "optional_host_permissions": [
      "https://*/*"
    ],
    "optional_permissions": [
      "activeTab",
      "https://*/*"
